<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="trialEntity"
            type="edu.metrostate.ics372.thatgroup.clinicaltrial.models.entities.TrialEntity" />

        <variable
            name="callback"
            type="edu.metrostate.ics372.thatgroup.clinicaltrial.ui.callback.EntityClickCallback" />
    </data>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/item_horizontal_margin"
        android:layout_marginStart="@dimen/item_horizontal_margin"
        android:minHeight="@dimen/item_min_height"
        android:onClick="@{() ->  callback.onClick(trialEntity)}"
        android:orientation="horizontal"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/item_horizontal_margin"
            android:layout_marginStart="@dimen/item_horizontal_margin">

            <TextView
                android:id="@+id/id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{trialEntity.id}" />

            <TextView
                android:id="@+id/startDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="5dp"
                android:text="@{trialEntity.startDateString}" />

            <TextView
                android:id="@+id/endDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/startDate"
                android:layout_marginEnd="5dp"
                android:text="@{trialEntity.endDateString}" />

            <TextView
                android:id="@+id/info"
                android:layout_width="333dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/id"
                android:text="All sorts of junk and stuff" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</layout>